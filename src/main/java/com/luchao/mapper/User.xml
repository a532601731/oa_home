<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 对应 dao 中的 接口 -->
<mapper namespace="com.luchao.dao.UserMapper">
	<resultMap type="com.luchao.entity.User" id="UserMap">
		<id property="userId" column="user_id"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="nickname" column="nickname"/>
		<result property="avater" column="avater"/>
		<result property="leaderId" column="leader_id"/>		
	</resultMap>
	<resultMap type="com.luchao.entity.User" id="nbUser">
		<id property="userId" column="user_id"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="nickname" column="nickname"/>
		<result property="avater" column="avater"/>
		<result property="leaderId" column="leader_id"/>
		 <collection property="menus" ofType="com.luchao.entity.Menu" resultMap="com.luchao.dao.MenuMapper.MenuMap">
        </collection>
	</resultMap>
  

    <select id="getUserById" parameterType="int" resultMap="UserMap">
        select * from `user` where user_id = #{userId}
    </select>
    
    
    
    <!-- 增加一个 user -->
    <insert id="add" parameterType="com.luchao.entity.User" useGeneratedKeys="true" keyProperty="user_id" >
    	insert into `user` values ( null , #{username} , #{password} , #{nickname} , #{leaderId} ,#{userHead}  )
    </insert>
    
    <!-- 删除 一个 user -->
    <delete id="delete" parameterType="int">
    	delete from user where user_id = #{id}
    </delete>
    
    <update id="update" parameterType="com.luchao.entity.User">
    	update `user` set 
    		username = #{username} , 
    		password = #{password} , 
    		nickname = #{nickname} ,
    		leader_id = #{leaderId},
    		user_head=#{userHead} 
    	where user_id = #{userId}
    </update>
    
    <select id="getUserByUsernameAndPassword" 
    	parameterType="com.luchao.entity.User" 
    	resultMap="UserMap">
    	select * from `user` where username = #{username} and password = #{password}
   	</select>
   	
   	<select id="getMenusByUserId" 
    	parameterType="int" 
    	resultMap="nbUser">
    	SELECT
    	user.*,
		menu.*

		FROM
		user 
		INNER JOIN user_role ON user_role.user_id = user.user_id
		INNER JOIN role ON user_role.role_id = role.role_id
		INNER JOIN role_permission ON role_permission.role_id = role.role_id
		INNER JOIN permission ON role_permission.permission_id = permission.permission_id
		INNER JOIN permission_menu ON permission_menu.permission_id = permission.permission_id
		INNER JOIN menu ON permission_menu.menu_id = menu.menu_id
		where user.user_id=#{id}
   	</select>
   
    
    
    
    
    

</mapper>
